
<%if @category.errors.any? %>
  <h2>The following errors prevented the article from being updated</h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @category, local: true) do |f| %>

<p> 
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p> 
  <%= f.submit %>
</p>

<%end%>
